{
    "MigrateDatabase": true,
    "GenerateJwt": {
        "Issuer": "https://demo-in-azure.auth.todo-by-satrapu.com",
        "Audience": "https://demo-in-azure.api.todo-by-satrapu.com"
    },
    "Serilog": {
        "LevelSwitches": {
            "$controlSwitch": "Debug"
        },
        "Using": [
            "Serilog.Sinks.ApplicationInsights"
        ],
        "WriteTo": [
            {
                "Name": "ApplicationInsights",
                "Args": {
                    // @satrapu July 16th, 2022: Provide a dummy connection string to ensure Serilog.Sinks.ApplicationInsights does not complain
                    // about a missing or invalid value; when this application runs in Azure, the proper connection string will be provided.
                    "connectionString": "InstrumentationKey=00000000-0000-0000-0000-000000000000;",
                    "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
                }
            }
        ],
        "Properties": {
            "Application": "Todo.WebApi.DemoInAzure"
        }
    },
    "OpenTelemetry": {
        "Exporters": {
            "AzureMonitor": {
                "Enabled": true
            },
            "Jaeger": {
                "Enabled": false
            }
        }
    }
}
