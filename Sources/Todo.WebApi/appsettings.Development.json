{
    "MigrateDatabase": true,
    "GenerateJwt": {
        "Issuer": "https://development.auth.todo-by-satrapu.com",
        "Audience": "https://development.api.todo-by-satrapu.com"
    },
    "Serilog": {
        "LevelSwitches": {
            "$controlSwitch": "Debug"
        },
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u3} | trid: {TraceId} sid: {SpanId} cid:{ConversationId} fid:{ApplicationFlowName} thid:{ThreadId} | {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341",
                    "controlLevelSwitch": "$controlSwitch"
                }
            }
        ],
        "Properties": {
            "Application": "Todo.WebApi.Development"
        }
    },
    "ExceptionHandling": {
        "IncludeDetails": true
    },
    "HttpLogging": {
        "Enabled": true
    },
    "ConfigurationDebugViewEndpointEnabled": true,
    "OpenTelemetry": {
        "AttachLogsToActivity": true,
        "Exporters": {
            "Jaeger": {
                "AgentHost": "localhost",
                "AgentPort": 6831
            }
        }
    }
}
