<?xml version="1.0" encoding="utf-8" ?>
<SonarQubeAnalysisProperties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                             xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
                             xmlns="http://www.sonarsource.com/msbuild/integration/2015/1">
  <!--
    Analysis parameters are defined here: https://docs.sonarqube.org/latest/analysis/analysis-parameters/.
  -->
  <Property Name="sonar.host.url">https://sonarcloud.io</Property>
  <Property Name="sonar.organization">satrapu-github</Property>
  <Property Name="sonar.projectKey">aspnet-core-logging</Property>
  <Property Name="sonar.sourceEncoding">UTF-8</Property>
  <Property Name="sonar.verbose">true</Property>

  <!--
    Import test results: https://docs.sonarqube.org/pages/viewpage.action?pageId=6389772#UnitTestExecutionResultsImport(C#,VB.NET).
  -->
  <Property Name="sonar.cs.nunit.reportsPaths">**/TestResults/*.*</Property>

  <!--
    Import code coverage results: https://docs.sonarqube.org/pages/viewpage.action?pageId=6389770.
  -->
  <Property Name="sonar.cs.opencover.reportsPaths">**/coverage.opencover.xml</Property>

  <!--
    Exclude test code when collecting code coverage
  -->
  <Property Name="sonar.coverage.exclusions">**/Tests/**/*.cs</Property>

</SonarQubeAnalysisProperties>